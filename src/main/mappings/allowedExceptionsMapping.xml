<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mappings PUBLIC "-//DOZER//DTD MAPPINGS//EN"
  "http://dozer.sourceforge.net/dtd/dozerbeanmapping.dtd">

<mappings>

  <configuration>
    <stop-on-errors>false</stop-on-errors>

    <allowed-exceptions>
      <exception>net.sf.dozer.util.mapping.vo.allowedexceptions.TestException</exception>
    </allowed-exceptions>

  </configuration>

  <mapping>
    <class-a>net.sf.dozer.util.mapping.vo.TestObject</class-a>
    <class-b>net.sf.dozer.util.mapping.vo.TestObjectPrime</class-b>

    <field>
      <a>throwAllowedExceptionOnMap</a>
      <b>throwAllowedExceptionOnMapPrime</b>
    </field>

    <field>
      <a>throwNonAllowedExceptionOnMap</a>
      <b>throwNonAllowedExceptionOnMapPrime</b>
    </field>

  </mapping>

</mappings>