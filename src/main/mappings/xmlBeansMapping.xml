<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mappings PUBLIC "-//DOZER//DTD MAPPINGS//EN"
   "http://dozer.sourceforge.net/dtd/dozerbeanmapping.dtd">
<mappings>

  <configuration>
     <stop-on-errors>true</stop-on-errors>
     <date-format>MM/dd/yyyy HH:mm</date-format> <!-- default dateformat will apply to all class maps unless the class mapping explicitly overrides it -->
     <wildcard>true</wildcard> <!-- default wildcard policy that will apply to all class maps unless the class mapping explicitly overrides it -->     
  </configuration>
  
  <mapping  wildcard="false">
    <class-a>net.sf.dozer.util.mapping.vo.TestObject</class-a>
    <class-b bean-factory="net.sf.dozer.util.mapping.factory.XMLBeanFactory">net.sf.dozer.util.mapping.vo.GetWeatherByZipCodeDocument</class-b>

    <field>
      <a>one</a>
      <b>GetWeatherByZipCode.zipCode</b>
    </field>    
  </mapping>   

  <mapping>
    <class-a>net.sf.dozer.util.mapping.vo.Child</class-a>
    <class-b bean-factory="net.sf.dozer.util.mapping.factory.XMLBeanFactory">net.pmonks.xml.dozer.test.ChildType</class-b>

    <field>
      <a>name</a>
      <b>name</b>
    </field>
  </mapping>

  <mapping  wildcard="false">
    <class-a>net.sf.dozer.util.mapping.vo.TestObject</class-a>
    <class-b bean-factory="net.sf.dozer.util.mapping.factory.XMLBeanFactory">net.sf.dozer.util.mapping.vo.GetWeatherByZipCodeResponseDocument</class-b>

    <field>
      <a>setToArray</a>
      <b>GetWeatherByZipCodeResponse.WeatherDataArray</b>
    </field>    
  </mapping>   

</mappings>